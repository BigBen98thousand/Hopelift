    <script>
        // Mobile Navigation Toggle
        const navToggle = document.getElementById('nav-toggle');
        const navMenu = document.getElementById('nav-menu');

        navToggle.addEventListener('click', () => {
            navMenu.classList.toggle('active');
        });

        // Close mobile menu when clicking on a link
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', () => {
                navMenu.classList.remove('active');
            });
        });

        // Form Submission Handling
        document.getElementById('grantForm').addEventListener('submit', function(e) {
            e.preventDefault();
            document.getElementById('grantSuccess').style.display = 'block';
            this.reset();
            setTimeout(() => {
                document.getElementById('grantSuccess').style.display = 'none';
            }, 5000);
        });

        document.getElementById('donationForm').addEventListener('submit', function(e) {
            e.preventDefault();
            document.getElementById('donationSuccess').style.display = 'block';
            this.reset();
            setTimeout(() => {
                document.getElementById('donationSuccess').style.display = 'none';
            }, 5000);
        });

        document.getElementById('sponsorForm').addEventListener('submit', function(e) {
            e.preventDefault();
            document.getElementById('sponsorSuccess').style.display = 'block';
            this.reset();
            setTimeout(() => {
                document.getElementById('sponsorSuccess').style.display = 'none';
            }, 5000);
        });

        document.getElementById('volunteerForm').addEventListener('submit', function(e) {
            e.preventDefault();
            document.getElementById('volunteerSuccess').style.display = 'block';
            this.reset();
            setTimeout(() => {
                document.getElementById('volunteerSuccess').style.display = 'none';
            }, 5000);
        });

        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            document.getElementById('contactSuccess').style.display = 'block';
            this.reset();
            setTimeout(() => {
                document.getElementById('contactSuccess').style.display = 'none';
            }, 5000);
        });

        // Donation amount buttons
        document.querySelectorAll('.amount-btn').forEach(button => {
            button.addEventListener('click', function() {
                // Remove active class from all buttons
                document.querySelectorAll('.amount-btn').forEach(btn => {
                    btn.classList.remove('active');
                });
                
                // Add active class to clicked button
                this.classList.add('active');
                
                // Set custom amount field to selected value
                const amount = this.textContent.replace('₦', '').replace(',', '');
                document.querySelector('.custom-amount').value = amount;
            });
        });

        // Hide mobile menu when scrolling
        window.addEventListener('scroll', () => {
            if (navMenu.classList.contains('active')) {
                navMenu.classList.remove('active');
            }
        });

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
</body>
</html>
